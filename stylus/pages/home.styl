.media img
    width 300px !important
    height 300px
    border 20px solid transparent
    border-image url(../img/pattern.svg) 30 round
    margin 15px

.media-heading
    font-size 25px
    text-align center
    font-weight 1000

.but
    height 40px
    border-radius 20px
    border 2px solid lightpink
    transition .4s ease-out
    background-color lightpink
    margin-bottom 10px
    
    &:hover
        background-color rgba(0,0,0,0)


.home 
    &-item 
        display flex

        &-picture 
            margin 60px 20px 0 0

            img 
                width 200px

        &-title 
            text-align center 
            font-weight bold

        &-content 
            text-align justify


        +below($mobile-width)
            flex-direction column
            align-items center

            &-picture 
                margin 0
                width 80%

                img 
                    width 100%



