footer
    background-size cover
    background-color rgba(255, 255, 255, .3)
    padding-top 10px

    .footer-box
        display flex
        flex-direction row
        margin-top 20px  

        +below($mobile-width)
            flex-direction column

            .footer-box
                &-text
                    width 100%

                    i
                        margin 20px

        &-container 
            display flex 
            justify-content space-around

            +below($mobile-width)
                margin-bottom 20px

            +below($extra-mobile-width)
                flex-direction column
                align-items center
        
        &-text
            width 40%
            margin-left 20px

            p 
                text-align justify

            +below($tablet-width)
                display none

            i
                cursor pointer
                font-size 25px
                text-align center
                line-height 40px
                background-color white
                width 40px
                height 40px
                border-radius 30px
                margin 0 8px
                transition 0.4s ease

                &:hover
                    background-color lightblue

        &-icons 
            display flex
            justify-content center
        
        &-list
            display flex
            flex-direction column
            list-style-type none
            padding 0
            margin-left 20px
            cursor pointer

            &:first-of-type 
                margin-right 30px

                +below($extra-mobile-width)
                    margin-right 0

            &-container 
                display flex 

                +below($extra-mobile-width)
                    justify-content space-around
                    width 100%


            li:hover
                color rgb(255, 102, 102)
        
        &-contacts
            margin 0 10px
            margin-left 20px
            padding-left 10px
            line-height 30px

        &-subscribe
            background-color rgba(255, 255, 255, 0.3)
            display flex 
            flex-direction column
            align-items center
            padding 10px 

            +below($extra-mobile-width)
                margin-bottom 20px
                width 100%


            p
                margin-top 10px
                font-size 20px

            input
                border 1px solid black
                border-radius 20px
                height 40px
                padding 10px
                margin 10px 10px 30px
                background-color rgba(255, 255, 255, 0.6)
                outline 0

      